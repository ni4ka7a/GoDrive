@model IEnumerable<GoDrive.Web.Areas.Administration.ViewModels.OrganizationRequests.CreateOrganizationRequestViewModel>

<table class="centered">
    <thead>
        <tr class="white-text">
            <th data-field="price">Username</th>
            <th data-field="id">Organization Name</th>
            <th data-field="name">Description</th>
            <th data-field="price">Created On</th>
            <th data-field="price">IsProceed</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var request in Model)
        {
            <tr>
                <td>@request.UserName</td>
                <td>@request.OrganizationName</td>
                <td>@request.OrganizationDescription</td>
                <td>@request.CreatedOn</td>
                <td>@request.IsProceed</td>
                <td>
                    
                    @using (Html.BeginForm("CreateOrganization", "ManageRequests", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" value="@request.Id" name="Id" />
                        <input type="hidden" value="@request.OrganizationName" name="OrganizationName" />
                        <input type="hidden" value="@request.OrganizationDescription" name="OrganizationDescription" />
                        <input type="hidden" value="@request.UserId" name="UserId" />

                        <button type="submit" class="aves-effect waves-light btn deep-purple darken-4">Create</button>
                    }

                    @*@Html.ActionLink("Create", "CreateOrganization", "ManageRequests", routeValues: new { model = request, area = "Administration" }, htmlAttributes: new { @class = "aves-effect waves-light btn deep-purple darken-4" })*@
                </td>
                <td>
                    @Html.ActionLink("Done", "ProceedRequest", "ManageRequests", routeValues: new { id = request.Id, area = "Administration" }, htmlAttributes: new { @class = "aves-effect waves-light btn deep-purple darken-4" })
                </td>
            </tr>
        }

    </tbody>
</table>
