@model GoDrive.Web.ViewModels.JoinOrganization.JoinOrganizationViewModel

<h2 class="white-text">Join Organization - @Model.OrganizationName</h2>

<div id="register-wrapper" class="row">

    @using (Html.BeginForm("Apply", "JoinOrganization", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "red-text" })

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                @Html.TextBoxFor(m => m.FirstName, new { })
                @Html.LabelFor(m => m.FirstName, new { @for = "icon_prefix" })
                <div>
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "red-text" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                @Html.EditorFor(m => m.LastName, new { })
                @Html.LabelFor(m => m.LastName, new { @for = "icon_prefix" })
                <div>
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "red-text" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                @Html.EditorFor(m => m.Age, new { })
                @Html.LabelFor(m => m.Age, new { @for = "icon_prefix" })
                <div>
                    @Html.ValidationMessageFor(m => m.Age, "", new { @class = "red-text" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                @Html.EditorFor(m => m.AdditionalInformation, new { })
                @Html.LabelFor(m => m.AdditionalInformation, new { @for = "icon_prefix" })
                <div>
                    @Html.ValidationMessageFor(m => m.AdditionalInformation, "", new { @class = "red-text" })
                </div>
            </div>
        </div>

        @Html.HiddenFor(x => x.OrganizationId)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn waves-effect waves-light deep-purple darken-4" type="submit" name="action">
                    Apply
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}