@model GoDrive.Web.ViewModels.Manage.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<h2 class="white-text">@ViewBag.Title.</h2>

<div id="change-password-wrapper">

    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4 class="white-text">Change Password Form</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "red-text" })

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                @Html.PasswordFor(m => m.OldPassword, new { id = "icon_prefix" })
                @Html.LabelFor(m => m.OldPassword, new { @for = "icon_prefix" })
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                @Html.PasswordFor(m => m.NewPassword, new { id = "icon_prefix" })
                @Html.LabelFor(m => m.NewPassword, new { @for = "icon_prefix" })
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                @Html.PasswordFor(m => m.ConfirmPassword, new { id = "icon_prefix" })
                @Html.LabelFor(m => m.ConfirmPassword, new { @for = "icon_prefix" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn waves-effect waves-light deep-purple darken-4" type="submit" name="action">
                    Change password
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}