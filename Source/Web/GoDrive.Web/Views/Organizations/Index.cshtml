@model GoDrive.Web.ViewModels.Organizations.OrganizationListViewModel

<h2 class="white-text">All Organizations:</h2>

<hr />

<div id="all-organizations-wrapper">
    <div class="row">

        @foreach (var organization in Model.Organizations)
        {
            <div class="col s4">
                <div class="card">
                    <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="@organization.OrganizationImageUrl">
                    </div>
                    <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4">@organization.Name<i class="material-icons right">more_vert</i></span>
                        <p><a class="waves-effect waves-light btn" href="/Organizations/Details/@organization.Id">Details</a></p>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">@organization.Name<i class="material-icons right">close</i></span>
                        <p>@organization.AboutInfo</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="waves-effect"><a class="" href="/Organizations/index?page=@(Model.CurrentPage - 1)"><i class="material-icons">chevron_left</i></a></li>

        }
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            var activeClass = string.Empty;
            if (Model.CurrentPage == i)
            {
                activeClass = "active";
            }

            <li class="waves-effect @activeClass"><a class="deep-purple-text text-darken-4" href="/Organizations/index?page=@i">@i</a></li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="waves-effect"><a class="deep-purple-text text-darken-4" href="/Organizations/index?page=@(Model.CurrentPage + 1)"><i class="material-icons">chevron_right</i></a></li>
        }
    </ul>

</div>